{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse - La Boutique Francaise{% endblock %}

{% block content %}
<h1>Ajouter une adresse</h1>
<a href="{{ path('account_address') }}">Retour</a>
<hr>
{#{{ form(address_form) }}#}
{{ form_start(address_form) }}
  <div class="row">
     <div class="col-md-12">
          {{ form_row(address_form.name) }}
     </div>
     <div class="col-md-6">
       {{ form_row(address_form.firstname) }}
     </div>
     <div class="col-md-6">
      {{ form_row(address_form.lastname) }}
     </div>
      <div class="col-md-6">{{ form_row(address_form.company) }}</div>
      <div class="col-md-6">{{ form_row(address_form.address) }}</div>
      <div class="col-md-6">{{ form_row(address_form.postal) }}</div>
      <div class="col-md-6">{{ form_row(address_form.city) }}</div>
      <div class="col-md-6">{{ form_row(address_form.country) }}</div>
      <div class="col-md-6">{{ form_row(address_form.phone) }}</div>
  </div>
{{ form_end(address_form) }}
{% endblock %}

